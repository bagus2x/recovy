                                        "success": {
                                            "type": "boolean",
                                            "default": true
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "cursor": {
                                                    "type": "object",
                                                    "properties": {
                                                        "next": {
                                                            "type": "integer"
                                                        },
                                                        "previous": {
                                                            "type": "integer"
                                                        }
                                                    }
                                                },
                                                "podcasts": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object",
                                                        "properties": {
                                                            "id": {
                                                                "type": "integer",
                                                                "minLength": 1
                                                            },
                                                            "author": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "id": {
                                                                        "type": "number"
                                                                    },
                                                                    "name": {
                                                                        "type": "string"
                                                                    },
                                                                    "picture": {
                                                                        "type": "string"
                                                                    }
                                                                }
                                                            },
                                                            "picture": {
