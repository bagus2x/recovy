        "/podcasts": {
            "get": {
                "tags": ["Podcast"],
                "summary": "Get semua data dengan menggunakan cursor based pagination",
                "description": "Gunakan 'limit' pada header untuk mengatur jumlah item dari setiap halaman. dan gunakan 'cursor' pada header untuk berpindah halaman. Semua query string adalah opsional. kecuali jika menyertakan direction=previous maka cursor='cursor.previous' juga harus disertakan; 'cursor.previous' tersebut didapat dari response sebelumnya",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "required": false,
                        "description": "Tidak wajib. namun jika ingin mendaptakn starred yang bernilai true maka header yang valid wajib disertakan",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "cursor",
                        "description": "cursor berguna untuk menunjuk page selanjutnya atau sebelumnya",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "default": "default valuenya adalah max int32 (2147483647)"
                        }
                    },
                    {
                        "name": "limit",
                        "description": "gunakan limit untuk membatasi maximum item",
                        "in": "query",
                        "schema": {
                            "type": "number",
                            "minimum": 0,
                            "default": "Default value adalah 10 items"
                        }
                    },
                    {
                        "name": "direction",
                        "description": "Wajib digunakan di url jika direction=previous",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "previous",
                                "next"
                            ],
                            "default": "next"
                        }
                    },
                    {
                        "name": "author_id",
                        "description": "Opsional. filter berdasar author_id",
                        "in": "query",
                        "schema": {
                            "type": "number",
                            "minimum": 1
                        }
                    },
                    {
                        "name": "title",
                        "description": "Opsional. filter berdasar title. bisa menggunakan wildcard seperti: %title%",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "minimum": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "starred akan selalu bernilai false jika user belumm terauthetikasi",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
